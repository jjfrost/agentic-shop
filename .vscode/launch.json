{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/backend",
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "args": [
        "src.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-config",
        "logging_config.yaml",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": false,
      "preLaunchTask": "start-arize"
    },
    {
        "name": "Launch Frontend (UI)",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "dev"
        ],
        "skipFiles": [
            "node_modules/**"
        ]
    },
    {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "justMyCode": true
    }
  ],
  "compounds": [
      {
          "name": "Launch Frontend and Backend",
          "configurations": [ "Launch Frontend (UI)", "Launch Backend: FastAPI" ],
          "stopAll": true
      }
  ]
}
